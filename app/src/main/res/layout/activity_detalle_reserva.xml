<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bienvenida"
    tools:context="com.example.library.DetalleReserva">

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="653dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_bienvenida"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Detalle de la reserva"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="363dp"
                android:layout_height="468dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toTopOf="@+id/btn_volver"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="80dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="8dp"
                        android:text="Maestro"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/info_maestro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.056"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/info_maestro"
                        android:layout_width="280dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="110dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="81dp"
                        android:text="Dia Visita"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView29"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.063"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/info_maestro" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="70dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="8dp"
                        android:text="Ciudad"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/spinner_info_ciudad"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/spinner_info_ciudad"
                        android:layout_width="280dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="70dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="8dp"
                        android:text="Estado"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/spinner_info_estado"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.054"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/spinner_info_estado"
                        android:layout_width="280dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginBottom="8dp"
                        android:text="Hora visita"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/spinnerHoraDetalle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.048"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/spinnerHoraDetalle"
                        android:layout_width="280dp"
                        android:layout_height="27dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <Spinner
                        android:id="@+id/spinnerDiasDetalle"
                        android:layout_width="280dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="41dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="41dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView29"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_volver"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:background="@drawable/background_btn_yellow"
                android:text="volver"
                app:layout_constraintBottom_toTopOf="@+id/btn_home"
                app:layout_constraintEnd_toStartOf="@+id/btn_actualizar"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_actualizar"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:background="@drawable/background_btn_principal"
                android:text="Actualizar"
                app:layout_constraintBottom_toTopOf="@+id/btn_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.754"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_btn_ok"
                android:text="home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>