<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bienvenida"
    tools:context="com.example.library.Cotizar">

    <androidx.cardview.widget.CardView
        android:layout_width="364dp"
        android:layout_height="683dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="357dp"
            android:layout_height="679dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="133dp"
                android:layout_height="121dp"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/txtMaestro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/divider_horizontal_bright" />

            <TextView
                android:id="@+id/txtMaestro"
                android:layout_width="153dp"
                android:layout_height="122dp"
                android:layout_marginEnd="4dp"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.514" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:layout_marginBottom="12dp"
                android:text="Selecione comuna:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/spinnerComuna"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.097"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinnerComuna"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#000000"
                app:layout_constraintBottom_toTopOf="@+id/txtcomuna"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtcomuna"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView31"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="150dp"
                android:layout_height="27dp"
                android:layout_marginBottom="12dp"
                android:text="Seleccione dia:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/spinnerDias"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinnerDias"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#000000"
                app:layout_constraintBottom_toTopOf="@+id/txtDias"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtDias"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginBottom="12dp"
                android:text="Seleccione hora:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/spinnerHora"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.073"
                app:layout_constraintStart_toStartOf="parent" />

            <Spinner
                android:id="@+id/spinnerHora"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#000000"
                app:layout_constraintBottom_toTopOf="@+id/txtHora"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtHora"
                android:layout_width="280dp"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toTopOf="@+id/btnCotiza"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.357"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnCotiza"
                android:layout_width="186dp"
                android:layout_height="44dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_btn_principal"
                android:text="Cotizar"
                app:layout_constraintBottom_toTopOf="@+id/txtValor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="266dp"
                android:layout_height="35dp"
                android:layout_marginBottom="12dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btnCotizarR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnCotizarR"
                android:layout_width="165dp"
                android:layout_height="49dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_btn_yellow"
                android:text="Volver a biblioteca"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnConfirmar"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="123dp"
                android:layout_height="49dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_btn_ok"
                android:text="Reservar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.896"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>