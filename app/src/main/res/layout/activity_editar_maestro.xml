<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bienvenida"
    tools:context=".editar_maestro">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="659dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:drawable/ic_menu_add"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/editNombre"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:text="Nombre"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="160dp" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="phone"
                android:textColorHint="#000000"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="221dp" />

            <EditText
                android:id="@+id/editSexo"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:text="Sexo"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="285dp" />

            <EditText
                android:id="@+id/editEdad"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="text"
                android:text="Edad"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="334dp" />

            <EditText
                android:id="@+id/editExperiencia"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Experiencia"
                android:inputType="textMultiLine"
                android:textColorHint="#000000"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="389dp" />

            <EditText
                android:id="@+id/editTiempoExperiencia"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Tiempo Experiencia"
                android:inputType="date"
                android:textColorHint="#000000"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="446dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColorHint="#000000"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="508dp" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="295dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="575dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>