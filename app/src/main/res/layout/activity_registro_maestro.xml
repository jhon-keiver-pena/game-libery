<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bienvenida"
    tools:context="com.example.library.RegistroMaestro">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="659dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Registro Maestro"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editNomMaestro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editNomMaestro"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:layout_constraintBottom_toTopOf="@+id/editTlfMaestro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/editTlfMaestro"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:hint="Telefono"
                android:inputType="text"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:layout_constraintBottom_toTopOf="@+id/editExperiencia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editNomMaestro" />

            <EditText
                android:id="@+id/editExperiencia"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Experiencia"
                android:inputType="textMultiLine"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:layout_constraintBottom_toTopOf="@+id/editExperienciaCamp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTlfMaestro" />

            <EditText
                android:id="@+id/editCorreoMaestro"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:shadowColor="#000000"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:layout_constraintBottom_toTopOf="@+id/editClaveMaestro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editExperienciaCamp" />

            <EditText
                android:id="@+id/editClaveMaestro"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                app:layout_constraintBottom_toTopOf="@+id/btn_select_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editCorreoMaestro" />

            <Button
                android:id="@+id/btn_crear_maestro"
                android:layout_width="145dp"
                android:layout_height="51dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_btn_ok"
                android:text="Crear cuenta"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.921"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="65dp"
                android:text="Ya tienes una cuenta?"
                android:textColor="#FDFDFD"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.215"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_select_image" />

            <Button
                android:id="@+id/btn_ir_inicio"
                android:layout_width="145dp"
                android:layout_height="51dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/background_btn_principal"
                android:text="Iniciar Sesion"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.136"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Button
                android:id="@+id/btn_select_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="1dp"
                android:text="Seleccionar Imagen"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editClaveMaestro" />

            <ImageView
                android:id="@+id/iv_selected_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="84dp"
                android:contentDescription="Imagen seleccionada"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/btn_select_image"
                app:layout_constraintTop_toBottomOf="@+id/editClaveMaestro" />

            <EditText
                android:id="@+id/editExperienciaCamp"
                android:layout_width="295dp"
                android:layout_height="53dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="9dp"
                android:ems="10"
                android:hint="Experiencia Campo"
                android:inputType="text"
                app:layout_constraintBottom_toTopOf="@+id/editCorreoMaestro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editExperiencia" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>